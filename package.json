{
  "name": "blogr-landing-page-main",
  "version": "1.0.0",
  "description": "Frontend mentor challenge",
  "main": "index.js",
  "scripts": {
    "watch:sass": "sass --watch sass/main.scss css/styles.css",
    "devServer": "live-server",
    "start": "npm-run-all --parallel devServer watch:sass",
    "compile:sass": "sass sass/main.scss css/styles.comp.css",
    "compress:css": "sass css/styles.comp.css css/styles.css --style compressed",
    "build:css": "npm-run-all compile:sass compress:css"
  },
  "author": "Ahmed Ashref",
  "license": "ISC",
  "dependencies": {
    "node-sass": "^7.0.1",
    "npm-run-all": "^4.1.5"
  }
}
